<div class="container">
  <h4>DÃ©couvrez notre collection</h4>
  <div class="media-cards">
    <% @categories.each do |category| %>
      <div class="category-title">
        <h3><%= category.capitalize + "s" %></h3>
        <div class="red-square"></div>
      </div>
          <% Media.where(category: category).each_slice(3).to_a.each do |array| %>
            <div class="media-carousel-group">
              <div class="row">
                <% array.each do |media| %>
                  <% media.photos.each do |photo| %>
                    <div class="col-xs-12 col-md-4">
                      <div class="media-card" style="background-image: url('<%= image_path photo.url, crop: :fill;%>'); background-size: cover; background-position: center;">
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
          </div>
          <% end %>
    <% end %>
  </div>
</div>
