<div class="container">
  <h4>DÃ©couvrez notre collection</h4>
  <div class="media-cards">
    <% @categories.each do |category| %>
      <div class="category-title">
        <h3><%= category.capitalize + "s" %></h3>
        <div class="red-square"></div>
      </div>
        <div class="category-row">
          <% Media.where(category: category).each do |media| %>
            <% media.photos.each do |photo| %>
                <div class="media-card" style="background-image: url('<%= image_path photo.url, crop: :fill;%>'); background-size: cover;">
                </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
