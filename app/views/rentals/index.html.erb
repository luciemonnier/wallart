<div class="container">
  <h4 id='categ-title'>Ma Collection</h4>
    <div class="rental-cards">
      <div class="row">
        <% @rentals.size.times do %>
          <div class="col-md-6 col-lg-3">
            <div class="full-rental card-rental">
            </div>
          </div>
        <% end %>
          <% (4 - @rentals.size).times do %>
            <div class="col-md-6 col-lg-3">
              <%= link_to medias_path do %>
                <div class="empty-rental card-rental" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 50%), url('<%#= image_path @images.sample %>'); background-size: cover;">
                  <div class="plus">
                    <i class="fas fa-plus"></i>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
    </div>
  </div>
</div>
