<div class="form-banner" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.2) 50%), url(<%= asset_path 'background3.jpg' %>);">



<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-xs-12 col-sm-4">
      <div class="fiche">
        <div>
          <h1>My Profile</h1>
          <br>
          <h2><%= @user.first_name %> <%= @user.last_name %></h2>
          <% if @user.subscription_type == nil %>
            <p>No subscription yet !</p>
            <div class="container">
              <div class="subscription-types">
                <div class="subscription-1">
                  Standard Plan
                </div>
                <div class="subscription-2">
                  Advanced Plan
                </div>
                <div class="subscription-2">
                  Premium Plan
                </div>
              </div>
            </div>
          <% else %>
            <p>Subscription Type :<%= @user.subscription_type %></p>
          <% end %>
          <br><br>
          <%= link_to 'Edit my Profile', edit_user_path(@user), class:'btn-wall' %>
        </div>
        <div>
          <%= cl_image_tag @user.photo, class:'profile-avatar', :transformation=>[ {:width=>400, :height=>400, :gravity=>"face", :radius=>"max", :crop=>"fill"}, {:width=>200, :crop=>"scale"} ] %>
        </div>
      </div>
    </div>
  </div>
</div>
