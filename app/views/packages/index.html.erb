<div class="form-banner" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.2) 50%), url(<%= asset_path 'background3.jpg' %>);">

  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-xs-12 col-sm-4">
      <div class="fiche">
        <div>
            <h4>Votre package actuel est l'abonnement <strong><%= @user_package.name %></strong></h4>
            <p>Découvrez les autres pachages ONE.O.1</p>
            <div class="subscription-types">
              <% i = 0 %>
              <div class="subscription-types">
                <% i = 0 %>
                <% @all_packages.each do |package| %>
                  <%= link_to package_path(package) do %>
                    <div class="subscription-<%=i + 1%>">
                      <span class="text-center">
                      <p><strong><%= package.name %></strong></p>
                      <p><%= package.price / 100 %>€/mois</p>
                      </span>
                    </div>
                    <% i += 1 %>
                  <% end %>
                <% end %>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
